<div class="br-section-wrapper">
  <h6 class="br-section-label">UPDATE PUBLISHER</h6>

  <% if(errors.length){ %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% errors.forEach(function(error){ %>
        <li><%=error%></li>
        <% }); %>
      </ul>
    </div>
    <% } %>

  <form action="/admin/publisher/update/<%= publisher.id%>" method="POST">
    <div class="form-layout form-layout-1">
      <div class="row mg-b-25">
        <div class="col-lg-4">
          <div class="form-group">
            <label class="form-control-label">Firstname: <span class="tx-danger">*</span></label>
            <input class="form-control form-control-dark" type="text" name="firstName" placeholder="Enter firstname" value="<%= publisher.firstName%>" required>
          </div>
        </div><!-- col-4 -->
        <div class="col-lg-4">
          <div class="form-group">
            <label class="form-control-label">Lastname: <span class="tx-danger">*</span></label>
            <input class="form-control form-control-dark" type="text" name="lastName" placeholder="Enter lastname" value="<%= publisher.lastName%>" required>
          </div>
        </div><!-- col-4 -->
        <div class="col-lg-4">
          <div class="form-group">
            <label class="form-control-label">Email address: <span class="tx-danger">*</span></label>
            <input class="form-control form-control-dark" type="text" name="email" placeholder="Enter email address" value="<%= publisher.email%>" required>
          </div>
        </div><!-- col-4 -->
        <div class="col-lg-4">
          <div class="form-group">
            <label class="form-control-label">Password: <span class="tx-danger">*</span></label>
            <input class="form-control form-control-dark" type="password" name="password" placeholder="*******" required>
          </div>
        </div><!-- col-4 -->
        <div class="col-lg-4">
          <div class="form-group mg-b-10-force">
            <label class="form-control-label">Company Name: <span class="tx-danger"></span></label>
            <input class="form-control form-control-dark" type="text" name="companyName" placeholder="Enter company name" value="<%= publisher.companyName%>">
          </div>
        </div><!-- col-8 -->
        <div class="col-lg-4">
          <div class="form-group">
            <label class="form-control-label">Website: <span class="tx-danger"></span></label>
            <input class="form-control form-control-dark" type="text" name="webSite" placeholder="Enter website" value="<%= publisher.webSite%>">
          </div>
        </div><!-- col-4 -->
        <div class="col-lg-4">
          <div class="form-group mg-b-10-force">
            <label class="form-control-label">Address: <span class="tx-danger"></span></label>
            <input class="form-control form-control-dark" type="text" name="address" placeholder="Enter address" value="<%= publisher.address%>">
          </div>
        </div><!-- col-8 -->
        <div class="col-lg-4">
          <div class="form-group mg-b-10-force">
            <label class="form-control-label">Phone: <span class="tx-danger"></span></label>
            <input class="form-control form-control-dark" type="text" name="phone" placeholder="Enter phone" value="<%= publisher.phone%>">
          </div>
        </div><!-- col-8 -->
      </div><!-- row -->

      <div class="form-layout-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/admin/publisher/list" class="btn btn-secondary">Cancel</a>
      </div><!-- form-layout-footer -->
    </div><!-- form-layout -->
  </form>
</div>
