<div class="tab-pane" id="tab-second">
  <div
    class="ht-200 bg-gray-200 d-flex align-items-center justify-content-center"
  >
    <form
      action="/admin/pdf/upload/<%= publisher.id %>/<%= title.id %>/<%= issue.id%>"
      method="post"
      enctype="multipart/form-data"
      class="dropzone"
    >
      <input
        type="file"
        name="file"
        id="file-upload"
        class="inputfile"
        data-multiple-caption="{count} files selected"
      />
      <label for="file-upload" class="tx-white bg-info">
        <i class="icon ion-ios-upload-outline tx-24"></i>
        <span>Choose file...</span>
      </label>
      <button type="submit" class="btn btn-primary btn-block mg-b-10">
        Upload
      </button>
    </form>
  </div>
  <hr />
  <div class="card bd-gray-400">
    <table class="table mg-b-0">
      <thead>
        <tr>
          <th class="tx-10-force tx-mont tx-medium">NAME</th>
          <th class="wd-5p"></th>
        </tr>
      </thead>
      <tbody>
        <% pdfs.forEach(function(pdf){ %>
        <tr>
          <td>PDF</td>
          <td class="dropdown">
            <a
              href="#"
              data-toggle="dropdown"
              class="btn pd-y-3 tx-gray-500 hover-info"
              ><i class="icon ion-more"></i
            ></a>
            <div class="dropdown-menu dropdown-menu-right pd-10">
              <nav class="nav nav-style-1 flex-column">
                <a href="<%= pdf.link%>" class="nav-link" download>Download</a>
              </nav>
            </div>
            <!-- dropdown-menu -->
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
